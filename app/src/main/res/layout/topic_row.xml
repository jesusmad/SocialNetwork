<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewLinea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTopicNameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:text="PokemonKotlin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTechNameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTopicNameRow"
            android:layout_below="@+id/tvTopicNameRow"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Kotlin"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvUserNameRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvTechNameRow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="jesusmad"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvTopicNameRow"
            android:layout_alignEnd="@+id/tvUserNameRow"
            android:text="01/03/18" />
    </RelativeLayout>

</android.support.v7.widget.CardView>