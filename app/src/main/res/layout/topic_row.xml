<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvTopicNameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="PokemonKotlin" />

    <TextView
        android:id="@+id/tvTechNameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTopicNameRow"
        android:layout_below="@+id/tvTopicNameRow"
        android:layout_marginTop="10dp"
        android:text="Kotlin" />

    <TextView
        android:id="@+id/tvUserNameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTechNameRow"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="jesusmad" />

    <TextView
        android:id="@+id/tvDateRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTopicNameRow"
        android:layout_alignEnd="@+id/tvUserNameRow"
        android:text="01/03/18" />
</RelativeLayout>