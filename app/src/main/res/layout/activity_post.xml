<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.althreeus.socialnetwork.views.PostActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/rlinfo">

        <TextView
            android:id="@+id/tvTopicNamePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="12dp"
            android:text="AquÃ­ va el nombre del repo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopicDatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvTopicNamePost"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="10/10/19" />

        <TextView
            android:id="@+id/tvTopicTechPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTopicNamePost"
            android:layout_below="@+id/tvTopicDatePost"
            android:layout_marginTop="15dp"
            android:text="Java"
            android:textColor="?attr/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopicNickPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvTopicTechPost"
            android:layout_alignEnd="@+id/tvTopicDatePost"
            android:text="jesusmad"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivTopicLinkPost"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvTopicNickPost"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_github" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rlinfo">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTopicPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type here..." />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_send" />


    </LinearLayout>

</RelativeLayout>
